{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": "src",                     // ← NOW points to src/
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "noEmitOnError": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"                         // ← Include all .ts files under src/
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}