{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "noEmitOnError": false,
    "sourceMap": true
  },
  "include": [
    "server.ts",           // ‚Üê ADD THIS
    "routes/**/*.ts",
    "models/**/*.ts",
    "middleware/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}